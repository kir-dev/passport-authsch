{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build/cjs",
    "lib": ["es2023"],
    "moduleResolution": "Node",
    "rootDir": "./src",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
